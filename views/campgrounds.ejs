<% include partials/header %>

  <div class="container">
    <header class="jumbotron">
      <div class="container">
        <h1>Welcome to Chaz's Camping Lodges </h1>
        <p>As we have travled all over the world you get to see some slick shit</p>
        <p>
          <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
        </p>
      </div>
    </header>

   <!-- decide if you want to put this here style="display:flex; flex-wrap: wrap;"  -->
    <div class="row text-center" style="display:flex; flex-wrap: wrap;" >
      <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
          <div class="img-thumbnail">
            <img src="<%= campground.image %>" style="width: 100%">
            <div class="caption">
              <h4><%= campground.name %></h4>
            </div>
          </div>
          </div>

        <% }) %>
     </div>
  </div>
  <% include partials/footer %>
